program DiagonalAverage;  // Оголошення програми з назвою DiagonalAverage

var
  a: array[1..10, 1..10] of integer;  // Оголошення двовимірного масиву 10x10 для матриці
  n, i, sum: integer;                 // n - розмір матриці, i - лічильник циклу, sum - сума елементів діагоналі
  avg: real;                          // avg - середнє арифметичне (тип real для дробових чисел)

begin
  write('Введіть розмір матриці n: ');  // Просимо користувача ввести розмір матриці
  readln(n);                             // Зчитуємо розмір матриці з клавіатури

  sum := 0;                               // Ініціалізуємо суму елементів діагоналі нулем
  writeln('Введіть елементи матриці:');  // Просимо користувача ввести елементи матриці

  for i := 1 to n do                     // Зовнішній цикл по рядках матриці
    for var j := 1 to n do               // Внутрішній цикл по стовпцях матриці
      read(a[i, j]);                     // Зчитуємо кожен елемент матриці

  for i := 1 to n do                     // Цикл для обчислення суми головної діагоналі
    sum := sum + a[i, i];                // Додаємо елемент головної діагоналі до суми

  avg := sum / n;                         // Обчислюємо середнє арифметичне головної діагоналі
  writeln('Середнє арифметичне головної діагоналі = ', avg:0:2); // Виводимо результат з 2 знаками після коми
end.
